<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/purple"
    tools:context=".login">

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="700dp"
        android:layout_margin="15dp"
        android:background="@drawable/custom_edittext"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="14dp">
            <Button
                android:id="@+id/home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="-10dp"
                android:backgroundTint="@color/blue"
                android:drawableTop="@drawable/baseline_home_24"
                app:cornerRadius="0dp"


                />
            <TextView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Fees details"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_verified_user_24"
                android:drawablePadding="8dp"
                android:hint="Student's Name"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />
            <EditText
                android:id="@+id/roll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_class_24"
                android:drawablePadding="8dp"
                android:hint="roll no"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />



            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="20dp"
                android:drawableLeft="@drawable/baseline_golf_course_24" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@id/spinner"
                android:drawableLeft="@drawable/baseline_golf_course_24" />



            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@id/spinner2"
                android:drawableLeft="@drawable/baseline_golf_course_24" />


            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@id/spinner3"
                android:drawableLeft="@drawable/baseline_golf_course_24" />



            <EditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_edittext"
                android:layout_below="@id/spinner2"
                android:drawableLeft="@drawable/baseline_post_add_24"
                android:drawablePadding="8dp"
                android:hint="fees amount"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />


            <Button
                android:id="@+id/next"
                android:layout_width="148dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="70dp"
                android:backgroundTint="@color/blue"
                android:text="Next"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>