<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/purple"
    tools:context=".login">



    <Button
        android:id="@+id/logout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/baseline_logout_24"
        app:cornerRadius="0dp"


        />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:layout_margin="15dp"
        android:background="@drawable/custom_edittext"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="33dp">





            <TextView
                android:id="@+id/loginText"
                android:layout_width="296dp"

                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Student Profile"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="36sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_details"
                android:layout_width="108dp"
                android:layout_height="100dp"
              android:layout_marginTop="50dp"
                android:backgroundTint="@color/blue"
                android:text="Student Details"
                android:textSize="16sp"
                android:drawableTop="@drawable/baseline_smart_button_24"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_fees"
                android:layout_width="108dp"
                android:layout_height="100dp"
          android:layout_marginLeft="175dp"
            android:layout_marginTop="-100dp"
                android:backgroundTint="@color/blue"
                android:text="Fees Structure"
                android:textSize="14sp"
                android:drawableTop="@drawable/baseline_smart_button_24"

                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:layout_marginTop="60dp"
                android:backgroundTint="@color/blue"
                android:text="Search Details"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:drawableLeft="@drawable/baseline_smart_button_24"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_admission"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_marginTop="80dp"
                android:backgroundTint="@color/blue"
                android:text="Admission Details"
                android:textSize="16sp"
                android:drawableTop="@drawable/baseline_smart_button_24"

                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btn_parent"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_marginTop="-100dp"
                android:backgroundTint="@color/blue"
                android:text="Parent details"
                android:textSize="16sp"
                android:drawableTop="@drawable/baseline_smart_button_24"

                app:cornerRadius="20dp"
                android:layout_gravity="end" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
