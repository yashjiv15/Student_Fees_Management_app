<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/purple"
    tools:context=".login">

  <androidx.cardview.widget.CardView
      android:layout_width="370dp"
      android:layout_height="700dp"
      android:layout_margin="15dp"
      android:background="@drawable/custom_edittext"
      app:cardCornerRadius="30dp"
      app:cardElevation="20dp">
    <Button
        android:id="@+id/home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/blue"
        android:drawableTop="@drawable/baseline_home_24"
        app:cornerRadius="0dp"


        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

      <TextView
          android:id="@+id/details"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="40dp"
          android:text="Personal details"
          android:textAlignment="center"
          android:textColor="@color/blue"
          android:textSize="36sp"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/Name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="10dp"
          android:background="@drawable/custom_edittext"
          android:drawableLeft="@drawable/baseline_verified_user_24"
          android:drawablePadding="8dp"
          android:hint="Full name"
          android:padding="8dp"
          android:textColor="@color/black"
          android:textColorHighlight="@color/cardview_dark_background" />


      <EditText
          android:id="@+id/email"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="25dp"
          android:background="@drawable/custom_edittext"
          android:drawableLeft="@drawable/baseline_alternate_email_24"
          android:drawablePadding="8dp"
          android:hint="email"
          android:padding="8dp"
          android:textColor="@color/black"
          android:textColorHighlight="@color/cardview_dark_background" />

      <EditText
          android:id="@+id/phone"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="25dp"
          android:background="@drawable/custom_edittext"
          android:drawableLeft="@drawable/baseline_phone_24"
          android:drawablePadding="8dp"
          android:hint="phone"
          android:padding="8dp"
          android:textColor="@color/black"
          android:textColorHighlight="@color/cardview_dark_background" />

      <EditText
          android:id="@+id/roll"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="25dp"
          android:background="@drawable/custom_edittext"
          android:drawableLeft="@drawable/baseline_format_list_numbered_24"
          android:drawablePadding="8dp"
          android:hint="Roll no"
          android:padding="8dp"
          android:textColor="@color/black"
          android:textColorHighlight="@color/cardview_dark_background" />

      <EditText
          android:id="@+id/aadhar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="25dp"
          android:background="@drawable/custom_edittext"
          android:drawableLeft="@drawable/baseline_confirmation_number_24"
          android:drawablePadding="8dp"
          android:hint="aadhar no"
          android:padding="8dp"
          android:textColor="@color/black"
          android:textColorHighlight="@color/cardview_dark_background" />

      <EditText
          android:id="@+id/section"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="25dp"
          android:background="@drawable/custom_edittext"
          android:drawableLeft="@drawable/baseline_class_24"
          android:drawablePadding="8dp"
          android:hint="Class"
          android:padding="8dp"
          android:textColor="@color/black"
          android:textColorHighlight="@color/cardview_dark_background" />

      <!--ImageView to preview the selected image-->

      <ImageView
          android:id="@+id/imageView"
          android:layout_width="120dp"
          android:layout_height="80dp"
          android:layout_marginLeft="19dp"
          android:layout_marginTop="25dp"
          android:outlineSpotShadowColor="@color/black"
          android:src="@drawable/baseline_image_search_24"

          />



      <Button
          android:id="@+id/buttonChoose"
          android:layout_width="wrap_content"
          android:layout_height="42dp"
          android:layout_centerHorizontal="true"
          android:layout_marginLeft="163dp"
          android:layout_marginTop="-85dp"
          android:backgroundTint="@color/black"
          android:text="Choose img"
          android:textColor="@android:color/white"
          android:textSize="18sp" />

      <Button
          android:id="@+id/next"
          android:layout_width="148dp"
          android:layout_height="50dp"
          android:layout_centerHorizontal="true"
          android:layout_marginLeft="90dp"
          android:layout_marginTop="65dp"
          android:backgroundTint="@color/blue"
          android:text="Next"
          android:textColor="@android:color/white"
          android:textSize="20sp" />
    </LinearLayout>

  </androidx.cardview.widget.CardView>



</LinearLayout>